generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("VITE_APP_DATABASE_URL")
}

model Attendance {
  id       Int     @id @default(autoincrement())
  email    String
  month    String?
  date     String?
  day      String?
  status   String?
  clockIn  String?
  clockOut String?
  rest     String?
}

model leave_balance {
  user_email    String @id
  paid_leave    Int
  harfday_leave Int
  special_leave Int
}

model approval_status {
  user_email String  @id
  admin      Boolean
  gm         Boolean
  delete     Boolean
}

model department {
  Id              Int    @id
  department_name String
}

model role {
  Id        Int    @id
  role_name String
}

model attendance_types {
  Id          Int    @id
  status_name String
}
